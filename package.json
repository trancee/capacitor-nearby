{
  "name": "capacitor-nearby",
  "version": "1.0.0",
  "description": "Uses Bluetooth LE to scan and advertise for nearby devices",
  "main": "dist/plugin.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "lint": "npm run prettier -- --check && npm run swiftlint -- lint",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "build": "npm run clean && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "author": "Philipp Grosswiler",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/android": "2",
    "@capacitor/core": "2",
    "@capacitor/ios": "2",
    "@ionic/prettier-config": "latest",
    "@ionic/swiftlint-config": "latest",
    "@rollup/plugin-node-resolve": "latest",
    "prettier": "latest",
    "prettier-plugin-java": "latest",
    "rimraf": "latest",
    "rollup": "latest",
    "swiftlint": "latest",
    "typescript": "latest"
  },
  "peerDependencies": {
    "@capacitor/core": "2"
  },
  "files": [
    "dist/",
    "ios/",
    "android/",
    "CapacitorNearby.podspec"
  ],
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "repository": {
    "type": "git",
    "url": "https://www.github.com/trancee/capacitor-nearby.git"
  },
  "bugs": {
    "url": "https://www.github.com/trancee/capacitor-nearby.git/issues"
  }
}
